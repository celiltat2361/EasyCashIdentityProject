@model ComfirmMailViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <form method="post">
        <h2>Mail address: @ViewBag.v</h2>
        <br />
        <label>User ID</label>
        <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v"/>
        <br />
        <label>Enter the 6-digit code sent to your e-mail address</label>
        <input type="text" class="form-control" asp-for="ComfirmCode"/>
        <br />
        <button class="btn btn-primary">Activate Account</button>
    </form>
</div>

